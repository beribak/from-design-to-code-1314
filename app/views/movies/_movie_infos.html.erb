<div class="movie-card" data-controller="update">
  <%= image_tag movie.image_url %>

  <div class="movie-infos">
    <h2><%= movie.title %><small> (<%= movie.year %>)</small></h2>
    <button aria-label="Edit movie" data-update-target="btn" data-action="click->update#toggleForm">
      <i class="fa-solid fa-pen fa-xs ml-2"></i>
    </button>
  </div>

  <%= simple_form_for movie, html: {class: "d-none"}, data: { update_target: "form", action: "submit->update#updateMovie" } do |f| %>
    <%= f.input :title %>
    <%= f.input :year %>
    <%= f.submit "Update movie", class: "btn btn-sm btn-primary btn-block mt-2" %>
  <% end %>
</div>
